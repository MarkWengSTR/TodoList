<div class="form container">
<%= form_for @todo do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>  
  </div>

  <div class="form-group">
    <%= f.label :date, "Due date" %>
    <%= f.text_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Note"%>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  
  <%= f.submit %>
  <%= link_to 'Back to index', todos_path, class:'btn btn-success' %>
<% end %>  
</div>


<% if @todo.errors.present? %>
  <ul>
  <% @todo.errors.each do |error, message| %>
    <li> <%= "#{error.capitalize} #{message}" %>  </li>
  <% end %>
  </ul>
<% end %>